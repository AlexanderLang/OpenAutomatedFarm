<div class="panel panel-default">
    <form role="form" action="${request.route_url('device_update', _id=device.id)}" method="post">
        <div class="panel-heading">
            <a href="${delete_href}" class="close">delete</a>
            <div class="row">
                <div class="col-sm-2">
                    <h4>${structure:edit_form['name'].title}</h4>
                </div>
                <div class="col-sm-6">
                    ${structure:edit_form['name'].serialize(device=device)}
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-2">
                    <h5>${structure:edit_form['device_type'].title}</h5>
                </div>
                <div class="col-sm-3">
                    ${structure:edit_form['device_type'].serialize(device=device)}
                </div>
                <div class="col-sm-2">
                    <h5>${structure:edit_form['description'].title}</h5>
                </div>
                <div class="col-sm-5">
                    ${structure:edit_form['description'].serialize(device=device)}
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-sm-2">
                    <h5>${structure:edit_form['actuator'].title}</h5>
                </div>
                <div class="col-sm-5">
                    ${structure:edit_form['actuator'].serialize(device=device)}
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.panel-body -->
        <button name="save" type="submit" class="btn btn-primary btn-lg" value="save">Save</button>
        <a href="#" class="btn btn-primary btn-lg">Calendar</a>
    </form>
</div><!-- /.panel -->
<div class="panel panel-default" id="periphery_controller_panel_${periphery_controller.id}" data="${periphery_controller.id}">
    <form role="form" action="${request.route_url('periphery_controller_update', _id=periphery_controller.id)}"
          method="post">
        <div class="panel-heading">
            <a href="${delete_href}" class="close">x</a>
            <div class="row">
                <div class="col-sm-2">
                    <h2>${structure:edit_form['name'].title}</h2>
                </div>
                <div class="col-sm-8">
                    <h2>${structure:edit_form['name'].serialize(periphery_controller=periphery_controller)}</h2>
                </div>
                <div class="col-sm-2">
                    <button name="save" type="submit" class="btn btn-primary btn-lg" value="save">Save</button>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-4">
                    <h3>Firmware</h3>
                </div>
                <div class="col-sm-8">
                    <h3>${periphery_controller.firmwareName + ' (' + periphery_controller.firmwareVersion + ')'}</h3>
                </div>
            </div>
            <!-- /.row -->

            <h2>Sensors:</h2>
            <div tal:repeat="s periphery_controller.sensors">
                <div class="col-sm-1"></div>
                <div class="col-sm-11">
                    ${panel('sensor_panel', s.id)}
                </div>
            </div>

            <h2>Actuators:</h2>
            <div tal:repeat="a periphery_controller.actuators">
                <div class="col-sm-1"></div>
                <div class="col-sm-11">
                    ${panel('actuator_panel', a.id)}
                </div>
            </div>
        </div>
    </form>
</div><!-- /.panel -->
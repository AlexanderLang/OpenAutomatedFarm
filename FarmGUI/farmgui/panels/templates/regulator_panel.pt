<div class="panel panel-default">
    <div class="panel-heading">
        <a href="${delete_href}" class="close">x</a>

        <h2>
            <a id="regulator_name_${regulator.id}" data-toggle="modal" href="#edit_regulator_modal_${regulator.id}">${regulator.name}</a>
        </h2>

        <h4>${regulator.description}</h4>

        <div class="modal" id="edit_regulator_modal_${regulator._id}">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        <h4 class="modal-title">Edit Regulator</h4>
                    </div>
                    <div class="modal-body">
                        <tal:form replace="structure edit_regulator_form"/>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-sm-2">
                <h5>Type: </h5>
            </div>
            <div class="col-sm-3">
                ${regulator.regulator_type.name}
            </div>
            <div class="col-sm-2">
                <h5>Input Parameter</h5>
            </div>
            <div class="col-sm-5">
                ${regulator.input_parameter.name}
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-sm-2">
                <h5>Output Device</h5>
            </div>
            <div class="col-sm-5">
                ${regulator.output_device.name}
            </div>
        </div>
        <!-- /.row -->

        <div tal:repeat="rc regulator.config">
            ${panel('regulator_config_panel', regulator_config=rc)}
        </div>
    </div>
    <!-- /.panel-body -->
</div><!-- /.panel -->
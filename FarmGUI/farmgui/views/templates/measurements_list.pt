<metal:block use-macro="main_template">
  <div metal:fill-slot="content">
    <h1>Measurements</h1>

    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Location</th>
          <th>Measurand</th>
          <th>Description</th>
          <th>Sensor</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="m measurements" onclick="document.location = '${request.route_url('measurement_view', measurement_id=m._id)}';">
          <td>${m.location.name}</td>
          <td>${m.measurand.name} ${m.measurand.unit}</td>
          <td>${m.description}</td>
          <td>
<?python
if m.sensor is not None:
	sensor_name = m.sensor.name
else:
	sensor_name = "None"
?>
            ${sensor_name}
          </td>
        </tr>
      </tbody>
    </table>
    <a class="btn btn-primary btn-lg" href="${request.route_url('measurements_new')}">Add</a>
  </div>
</metal:block>
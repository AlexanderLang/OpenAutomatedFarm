<metal:block use-macro="main_template">
  <div metal:fill-slot="content">
    <h1>Plant Settings</h1>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Plant</th>
          <th>Variety</th>
          <th>Method</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="ps plant_settings">
          <td>${ps.plant}</td>
          <td>${ps.variety}</td>
          <td>${ps.method}</td>
          <td>${ps.description}</td>
        </tr>
      </tbody>
    </table>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#addDialog">Add</button>
    <!-- Modal add dialog -->
    <div class="modal fade" id="addDialog" tabindex="-1" role="dialog" aria-labelledby="addDialogTitle" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;
            </button>
            <h4 class="modal-title" id="addDialogTitle">New Plant Settings</h4>
          </div>
          <div class="modal-body">
            <tal:form replace="structure addForm" />
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      deform.load()
    </script>
  </div>
</metal:block>
<metal:block use-macro="main_template">
  <div metal:fill-slot="content">
    <h1>Plant Settings</h1>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Plant</th>
          <th>Variety</th>
          <th>Method</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="ps plant_settings">
          <td>${ps.plant}</td>
          <td>${ps.variety}</td>
          <td>${ps.method}</td>
          <td>${ps.description}</td>
        </tr>
      </tbody>
    </table>
    <a class="btn btn-primary btn-lg" href="${request.route_url('add_plant_settings_view')}">Add</a>
  </div>
</metal:block>
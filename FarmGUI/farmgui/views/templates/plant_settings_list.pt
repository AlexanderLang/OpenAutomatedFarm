<metal:block use-macro="main_template">
    <div metal:fill-slot="content">
        <h1>Plant Settings</h1>

        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Plant</th>
                <th>Variety</th>
                <th>Method</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            <tr tal:repeat="ps plant_settings"
                onclick="document.location = '${request.route_url('plant_settings_view', _id=ps._id)}';">
                <td>${ps.plant}</td>
                <td>${ps.variety}</td>
                <td>${ps.method}</td>
                <td>${ps.description}</td>
            </tr>
            </tbody>
        </table>
        <a class="btn btn-primary btn-lg" href="${request.route_url('plant_settings_new')}">Add</a>
    </div>
</metal:block>